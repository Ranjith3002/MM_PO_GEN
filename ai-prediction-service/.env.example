# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4004,http://localhost:8080

# Hugging Face Configuration (Optional)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI Model Configuration
DEFAULT_AI_MODEL=statistical
ENABLE_BATCH_PROCESSING=true
MAX_BATCH_SIZE=50

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Economic Order Quantity Defaults
DEFAULT_ORDERING_COST=50
DEFAULT_HOLDING_COST_RATE=0.2

# Prediction Defaults
DEFAULT_CONFIDENCE_THRESHOLD=0.7
ENABLE_SEASONALITY=true
ENABLE_TREND_ANALYSIS=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# External API Timeouts
HUGGINGFACE_TIMEOUT=10000
EXTERNAL_API_RETRY_COUNT=3
