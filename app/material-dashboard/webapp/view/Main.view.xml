<mvc:View
    controllerName="ai.mm.materialdashboard.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">

    <Page id="page" title="{i18n>title}" showNavButton="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Title text="{i18n>title}" level="H1" class="sapUiMediumMarginBottom" />
                <Text text="{i18n>dashboardSubtitle}" class="sapUiMediumMarginBottom" />
                <Text text="{i18n>welcomeText}" class="sapUiLargeMarginBottom" />

                <!-- Navigation buttons -->
                <HBox class="sapUiMediumMarginBottom">
                    <Button
                        text="ðŸ¤– AI Materials"
                        type="Emphasized"
                        icon="sap-icon://ai"
                        press="onNavigateToAIMaterials"
                        class="sapUiMediumMarginEnd" />
                    <Button
                        text="{i18n>navToMaterials}"
                        type="Default"
                        press="onNavigateToMaterials"
                        class="sapUiMediumMarginEnd" />
                    <Button
                        text="{i18n>navToPOList}"
                        type="Default"
                        press="onNavigateToPOList"
                        class="sapUiMediumMarginEnd" />
                    <Button
                        text="{i18n>navToAnalytics}"
                        type="Default"
                        press="onNavigateToAnalytics" />
                </HBox>

                <!-- Dashboard tiles -->
                <HBox class="sapUiLargeMarginTop" wrap="Wrap">
                    <!-- AI Enhanced Materials Panel -->
                    <Panel class="sapUiMediumMarginEnd sapUiMediumMarginBottom" width="300px" headerText="ðŸ¤– AI-Enhanced Materials">
                        <content>
                            <VBox class="sapUiMediumMargin">
                                <Text text="Intelligent stock predictions and AI-powered purchase order generation" />
                                <HBox class="sapUiMediumMarginTop">
                                    <core:Icon src="sap-icon://ai" color="Good" class="sapUiTinyMarginEnd" />
                                    <Text text="Real-time AI analysis" class="sapUiTinyText" />
                                </HBox>
                                <Button
                                    text="ðŸ¤– Open AI Dashboard"
                                    type="Emphasized"
                                    icon="sap-icon://ai"
                                    press="onNavigateToAIMaterials"
                                    class="sapUiMediumMarginTop" />
                            </VBox>
                        </content>
                    </Panel>

                    <Panel class="sapUiMediumMarginEnd sapUiMediumMarginBottom" width="300px" headerText="{i18n>materialsTitle}">
                        <content>
                            <VBox class="sapUiMediumMargin">
                                <Text text="Manage your materials inventory" />
                                <Button
                                    text="{i18n>navToMaterials}"
                                    type="Transparent"
                                    press="onNavigateToMaterials"
                                    class="sapUiMediumMarginTop" />
                            </VBox>
                        </content>
                    </Panel>

                    <Panel class="sapUiMediumMarginEnd" width="300px" headerText="{i18n>poListTitle}">
                        <content>
                            <VBox class="sapUiMediumMargin">
                                <Text text="View and manage purchase orders" />
                                <Button
                                    text="{i18n>navToPOList}"
                                    type="Transparent"
                                    press="onNavigateToPOList"
                                    class="sapUiMediumMarginTop" />
                            </VBox>
                        </content>
                    </Panel>

                    <Panel width="300px" headerText="{i18n>analyticsTitle}">
                        <content>
                            <VBox class="sapUiMediumMargin">
                                <Text text="View analytics and insights" />
                                <Button
                                    text="{i18n>navToAnalytics}"
                                    type="Transparent"
                                    press="onNavigateToAnalytics"
                                    class="sapUiMediumMarginTop" />
                            </VBox>
                        </content>
                    </Panel>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
